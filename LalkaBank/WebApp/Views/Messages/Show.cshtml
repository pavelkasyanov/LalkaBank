@model WebApp.Models.Domains.Messages.MessageViewModel

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">&times;</button>
        <h4>Message for Request #@Model.Request.Number</h4>
    </div>
    <div class="modal-body">
        <form>
            <div class="form-group">
                @Html.LabelFor(m => m.Text)
                @Model.Text
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Request)
                @Model.Request.Number
                @*<a href="@Url.Action("Show", "Requests", new {id = Model.Request.Id})" target="_blank">
                </a>*@
            </div>
            @if (Model.Request.Confirm  == 1)
            {
                <div class="form-group">
                    <a href="@Url.Action("Show", "Credits", new {id = Model.Request.Id})" target="_blank">credit page</a>
                </div>
            }
            <Br />
            <div class="form-group">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </form>
    </div>
    <script type="text/javascript">
        jQuery(function ($) {    
        });
    </script>
</div>
