@model WebApp.Models.Domains.Requests.CreateRequestViewModel

@{
    ViewBag.Title = "Create request";
}

<div class="row">
    <h1 class="lb-center">
        <p class="lb-main_text">Lalka Bank</p>
        <h2>@ViewBag.Title</h2>
    </h1>
    <div class="lb-main">
        <div class="lb-central_pos">
            <div class="lb-container">
                @using (Html.BeginForm("Create", "Requests", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                    </div>
                    <div class="row">
                        @Html.LabelFor(m => m.CreditTypeId)
                        <div class="row">
                            @Html.DropDownListFor(m => m.CreditTypeId, Model.CreditTypes)
                        </div>
                    </div>
                        <div class="row">
                            @Html.LabelFor(m => m.StartSum)
                            <div class="row">
                                @Html.TextBoxFor(m => m.StartSum)
                            </div>
                        </div>
                        <div class="row">
                            @Html.LabelFor(m => m.CreditInfo)
                            <div class="row">
                                @Html.TextBoxFor(m => m.CreditInfo)
                            </div>
                        </div>
                        <div class="row">
                            <input type="submit" class="btn btn-default" value="Register" />
                        </div>
                }
            </div>
        </div>
    </div>
</div>



