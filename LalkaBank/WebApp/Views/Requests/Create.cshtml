@model WebApp.Models.Domains.Requests.CreateRequestViewModel

@{
    ViewBag.Title = "Create request";
}

<div class="row">
    @using (Html.BeginForm("Create", "Requests", FormMethod.Post, new {@class = "form-horizontal",
        role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            @Html.ValidationSummary("", new {@class = "text-danger"})
        </div>
        <div class="row">
            @Html.LabelFor(m => m.CreditTypeId)
            <div class="row">
                @Html.DropDownListFor(m => m.CreditTypeId, Model.CreditTypes)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.CreditInfo)
            <div class="row">
                @Html.TextBoxFor(m => m.CreditInfo)
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(m => m.IncomeImage)
            <div class="row">
                @Html.TextBoxFor(m => m.IncomeImage, new { type = "file" })
            </div>
        </div>
        <div class="row">
            <input type="submit" class="btn btn-default" value="Register"/>
        </div>
    }
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        jQuery(function ($) {
            if ($('[type="date"]').prop('type') != 'date') {
                $('[type="date"]').datepicker();
            }
        })
    </script>
}



