
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h1 class="lb-center">
        <p class="lb-main_text">Lalka Bank</p>
    </h1>
    <div class="lb-main">
        <div class="row">
            <div class="row">
                <h1 class="lb-center"></h1>
                <div class="lb-main">
                    <div class="lb-central_pos">
                        <div class="lb-container">
                            <div class="row lb-margin">
                                <h1>
                                    Error(
                                </h1>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <footer>
                <div style="margin: auto 30% auto 45%; text-align: center">
                    <div class="panel-footer" style="margin: 0px auto;">
                        &copy; @DateTime.Now.Year - Lalka Bank
                    </div>
                </div>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

